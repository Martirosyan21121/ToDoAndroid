<!-- res/drawable/button_background.xml -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/status_bar_color" /> <!-- Background color when pressed -->
            <corners android:radius="20dp" /> <!-- Corner radius, adjust as needed -->
        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="@color/toolbar" /> <!-- Default background color -->
            <corners android:radius="20dp" />
        </shape>
    </item>

</selector>